\begin_inset Formula $c$
\end_inset

 and 
\begin_inset Formula $d$
\end_inset

 as gains.
 Defining 
\begin_inset Formula $f_{G}$
\end_inset

 the probability weighting utility function applied to gains, and 
\begin_inset Formula $f_{L}$
\end_inset

 the probability weighting function applied to losses, I then have
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
U(L)=f_{L}(p_{a})u(a)+f_{L}(p_{b})u(b)+f_{G}(p_{c})u(c)+f_{G}(p_{d})u(d)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
with 
\begin_inset Formula 
\begin{align}
f_{L}(p_{a}) & =\pi_{L}(p_{a})\\
f_{L}(p_{b}) & =\pi_{L}(p_{a}+p_{b})-\pi_{L}(p_{a})\\
f_{G}(p_{c}) & =\pi_{G}(p_{c}+p_{d})-\pi_{G}(p_{d})\\
f_{G}(p_{d}) & =\pi_{G}(p_{d})
\end{align}

\end_inset


\end_layout

\begin_layout Standard
with 
\begin_inset Formula $\pi_{G}(.)$
\end_inset

